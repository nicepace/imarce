<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imarce.webadmin.dao.UserDao">
<resultMap id="BaseResultMap" type="com.imarce.webadmin.entity.User" >
    <id column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="user_role" property="roleId" jdbcType="INTEGER" />
            <association property="role" column="user_role" javaType="com.imarce.webadmin.entity.role">
            <id column="role_id" property="roleId" jdbcType="INTEGER"/>
            <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        </association>
        
    </resultMap>
	<select id="queryUser" resultType="com.imarce.webadmin.entity.User">
		SELECT
		  *
		FROM
			sys_user a ,sys_role b
	    WHERE
	      a.user_role=b.role_id
		ORDER BY
			user_id
		DESC
		LIMIT
			#{start},#{rows}
	</select>
	<select id="countUser" resultType="java.lang.Integer">
		SELECT
			COUNT(1)
		FROM
			sys_user
	</select>
	 <delete id="deleteUser">
	  DELETE 
	  FROM 
	  	sys_user 
	  WHERE 
	  	user_id = #{userId}
	  </delete>
	  <insert id="addUser" parameterType="User">
	        INSERT INTO sys_user (
			  user_name,
			  user_pwd
			) 
			VALUES
			  (
			    #{userName},
			     #{userPwd}
			  ) 
	  </insert>
	
</mapper>